<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="oval" >
            <solid
                android:color="@color/colorBorder"/>

            <size
                android:height="40dp"
                android:width="40dp" />
        </shape>
    </item>
    <item
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp">
        <shape android:shape="rectangle" >
            <solid android:color="#7DB300"/>
        </shape>
    </item>


</layer-list>